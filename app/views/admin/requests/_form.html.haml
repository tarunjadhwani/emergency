= simple_form_for([:admin, @request]) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-xs-12
        .form-group
          = f.input :mobile, input_html: {class: "form-control", number: true}

  .form-inputs
    .row
      .col-xs-12
        .form-group
          = f.input :address, input_html: {class: "form-control", rows: 3}

  .form-actions
    = link_to "Cancel", admin_diseases_path, class: "btn btn-default"
    = f.button :submit, class: "btn-primary"
