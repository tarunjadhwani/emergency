= simple_form_for([:admin, @symptom]) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-xs-12
        .form-group
          = f.input :name, input_html: {class: "form-control"}

  .form-actions
    = link_to "Cancel", admin_symptoms_path, class: "btn btn-default"
    = f.button :submit, class: "btn-primary"