.col-sm-12.col-xs-12
  .select-home-page
    %a.back-arrow{href: request_hospital_path}
      %img{src: "/assets/back-arrow.png", class: "back-arrow-image"}
    .select-box-text-back
      Your details

.col-sm-12.col-xs-12
  .phone-info-wrapper
    = simple_form_for(@request) do |f|

      .phone-description-text
        Provide your mobile number so that we can reach you
      .phone-input-field
        = f.input :mobile, label: false, input_html: {class: "phone-number-patient form-control", type: 'number', min: 0, step: 1, required: true}
        = f.input :book, as: :hidden, input_html: {value: true}
      .phone-submit-button-wrapper
        = f.button :submit, 'Submit', class: "btn btn-success btn-phone-submit", data: {"disable-with" => "Saving ..."}

:javascript
  $("#request_mobile").validate();